
<div class="col-md-12">
  <div class="table-responsive">
    <h1 style="color:#6D4F56;"><b>All Volunteers</b> </h1>
    <br>
    <br>
    <table class="table table-hover">

      <!-- This is a table row with headers -->
      <tr class="small">
        <th> Volunteer Name</th>
        <th> Location </th>
        <th> Skills </th>
        <th> Actions </th
      </tr>

        <% @volunteers.each do |volunteer| %>
        <tr class="small">
          <td> <%= volunteer.name %></td>
          <td> <%= volunteer.location %></td>
          <td> <% volunteer.skills.each do |skill| %>
            <%= skill.name %>
            <% end %>


          </td>

          <td>
            <%=link_to 'Show', volunteer_path(volunteer), class: "btn btn-default btn-xs" %>
            <%= link_to "Delete", volunteer, method: :delete, data: {confirm: "You sure?"}, class: 'btn btn-xs btn-danger' %>
          </td>
       </tr>
        <% end %>
    </table>
  </div>
</div>
